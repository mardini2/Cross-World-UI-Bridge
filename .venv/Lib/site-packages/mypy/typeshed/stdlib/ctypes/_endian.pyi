from ctypes import cdll as cdll
from ctypes import pydll as pydll
from ctypes import pythonapi as pythonapi

from _ctypes import RTLD_GLOBAL as RTLD_GLOBAL
from _ctypes import RTLD_LOCAL as RTLD_LOCAL
from _ctypes import Structure, Union

if sys.version_info >= (3, 12):
    from _ctypes import SIZEOF_TIME_T as SIZEOF_TIME_T

if sys.platform == "win32":
    from ctypes import oledll as oledll
    from ctypes import windll as windll

# At runtime, the native endianness is an alias for Structure,
# while the other is a subclass with a metaclass added in.
class BigEndianStructure(Structure): ...
class LittleEndianStructure(Structure): ...

# Same thing for these: one is an alias of Union at runtime
if sys.version_info >= (3, 11):
    class BigEndianUnion(Union): ...
    class LittleEndianUnion(Union): ...
